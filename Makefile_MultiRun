WANDB_API_KEY=b3fb3695850f3bdebfee750ead3ae8230c14ea07
RUN_FILE="jsrl-CORL/algorithms/finetune/ray_trainer_4seed.py"
DF=Dockerfile
DOCKER_EXTRAS=--detach -e WANDB_API_KEY=$(WANDB_API_KEY) -it --shm-size=10.24gb --cpus 24 -v ./algorithms/finetune/checkpoints:/workspace/checkpoints -v ./algorithms/finetune/wandb:/workspace/wandb -v .:/workspace/jsrl-CORL
PASSWORD ?= $(shell stty -echo; read -p "Password: " pwd; stty echo; echo $$pwd)

build:
	yes | docker container prune

	docker build \
	-f $(DF) \
	-t jsrl-corl \
	.

run1:
	docker run $(DOCKER_EXTRAS) --gpus device="0" \
	jsrl-corl python $(RUN_FILE) --env LunarLander-v2 --guide_heuristic_fn lunar_lander_perfect --offline_iterations 0 --online_iterations 250000 --env_config '{"continuous": True, "enable_wind": True, "wind_power": 20, "turbulence_power": 2.0}' --eval_freq 10000 --tolerance 0.05 --beta 10 --learner_frac -1 --iql_tau 0.9 --checkpoints_path checkpoints --horizon_fn time_step ;
	sudo sh check_stopped.sh ;

run2:
	docker run $(DOCKER_EXTRAS) --gpus device="0" \
	jsrl-corl python $(RUN_FILE) --horizon_fn time_step --checkpoints_path checkpoints --env antmaze-umaze-v2 --normalize True --normalize_reward False --iql_deterministic False --beta 10 --learner_frac -1 --iql_tau 0.9 --eval_freq 1000 --offline_iterations 1000000 --online_iterations 1000000 ;
	sudo sh check_stopped.sh ;

run3:
	docker run $(DOCKER_EXTRAS) --gpus device="0" \
	jsrl-corl python $(RUN_FILE) --horizon_fn time_step --checkpoints_path checkpoints --env antmaze-umaze-diverse-v2 --normalize True --normalize_reward False --iql_deterministic False --beta 10 --learner_frac -1 --iql_tau 0.9 --eval_freq 1000 --offline_iterations 1000000 --online_iterations 1000000 ;
	sudo sh check_stopped.sh ;


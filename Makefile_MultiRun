WANDB_API_KEY=b3fb3695850f3bdebfee750ead3ae8230c14ea07
RUN_FILE="jsrl-CORL/algorithms/finetune/ray_trainer.py"
DF=Dockerfile
DOCKER_EXTRAS=-e WANDB_API_KEY=$(WANDB_API_KEY) -it --shm-size=10.24gb --rm --gpus all --cpus 48 -v ./algorithms/finetune/checkpoints:/workspace/checkpoints -v ./algorithms/finetune/wandb:/workspace/wandb


build_and_run:
	sudo docker build \
	-f $(DF) \
	-t jsrl-corl \
	.

	echo "Run 1"

	sudo docker run $(DOCKER_EXTRAS) \

	jsrl-corl python $(RUN_FILE) --offline_iterations 5000 --online_iterations 5000 --pretrained_policy_path jsrl-CORL/algorithms/finetune/checkpoints/IQL-antmaze-umaze-v2-offline/checkpoint_1999999.pt --new_online_buffer True --checkpoints_path checkpoints --env antmaze-umaze-v2 --normalize True --normalize_reward True --iql_deterministic False --beta 10 --buffer_size 10000000 --iql_tau 0.9 ;
	echo "Run 2" ;
	sudo docker run $(DOCKER_EXTRAS) \
	jsrl-corl python $(RUN_FILE) --offline_iterations 5000 --online_iterations 5000 --pretrained_policy_path jsrl-CORL/algorithms/finetune/checkpoints/IQL-antmaze-umaze-v2-offline/checkpoint_1999999.pt --new_online_buffer False --checkpoints_path checkpoints --env antmaze-umaze-v2 --normalize True --normalize_reward True --iql_deterministic False --beta 10 --buffer_size 10000000 --iql_tau 0.9


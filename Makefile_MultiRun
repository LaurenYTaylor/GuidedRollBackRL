WANDB_API_KEY=b3fb3695850f3bdebfee750ead3ae8230c14ea07
RUN_FILE="jsrl-CORL/algorithms/finetune/ray_trainer.py"
DF=Dockerfile
DOCKER_EXTRAS=--detach -e WANDB_API_KEY=$(WANDB_API_KEY) -it --shm-size=10.24gb --rm --cpus 24 -v ./algorithms/finetune/checkpoints:/workspace/checkpoints -v ./algorithms/finetune/wandb:/workspace/wandb

build:
	yes | sudo docker container prune

	sudo docker build \
	-f $(DF) \
	-t jsrl-corl \
	.

run1:
	echo "Run 1.A"
	sudo docker run $(DOCKER_EXTRAS) --gpus device="0" \
	jsrl-corl python $(RUN_FILE) --offline_iterations 5000 --online_iterations 5000 --new_online_buffer True --horizon_fn goal_dist --pretrained_policy_path jsrl-CORL/algorithms/finetune/checkpoints/IQL-antmaze-umaze-v2-offline/checkpoint_1999999.pt --checkpoints_path checkpoints --env antmaze-umaze-v2 --normalize True --normalize_reward True --iql_deterministic False --beta 10 --buffer_size 10000000 --iql_tau 0.9
	echo "Run 1.B"
	sudo docker run $(DOCKER_EXTRAS) --gpus device="1" \
	jsrl-corl python $(RUN_FILE) --offline_iterations 5000 --online_iterations 5000 --new_online_buffer True --horizon_fn time_step --pretrained_policy_path jsrl-CORL/algorithms/finetune/checkpoints/IQL-antmaze-umaze-v2-offline/checkpoint_1999999.pt --checkpoints_path checkpoints --env antmaze-umaze-v2 --normalize True --normalize_reward True --iql_deterministic False --beta 10 --buffer_size 10000000 --iql_tau 0.9
	sh check_stopped.sh


run2:
	echo "Run 2.A"
	sudo docker run $(DOCKER_EXTRAS) --gpus device="0" \
	jsrl-corl python $(RUN_FILE) --offline_iterations 5000 --online_iterations 5000 --new_online_buffer False --horizon_fn goal_dist --pretrained_policy_path jsrl-CORL/algorithms/finetune/checkpoints/IQL-antmaze-umaze-v2-offline/checkpoint_1999999.pt --checkpoints_path checkpoints --env antmaze-umaze-v2 --normalize True --normalize_reward True --iql_deterministic False --beta 10 --buffer_size 10000000 --iql_tau 0.9
	echo "Run 2.B"
	sudo docker run $(DOCKER_EXTRAS) --gpus device="1" \
	jsrl-corl python $(RUN_FILE) --offline_iterations 5000 --online_iterations 5000 --new_online_buffer False --horizon_fn time_step --pretrained_policy_path jsrl-CORL/algorithms/finetune/checkpoints/IQL-antmaze-umaze-v2-offline/checkpoint_1999999.pt --checkpoints_path checkpoints --env antmaze-umaze-v2 --normalize True --normalize_reward True --iql_deterministic False --beta 10 --buffer_size 10000000 --iql_tau 0.9




build_and_run: build run1 run2
